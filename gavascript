// دالة لإضافة محاضرة جديدة
function addLecture() {
    // الحصول على اسم المحاضرة من المستخدم
    let lectureName = document.getElementById("lectureName").value;
    
    // التحقق من أن المستخدم أدخل اسم المحاضرة
    if (lectureName === "") {
        alert("الرجاء إدخال اسم المحاضرة.");
        return;
    }
    
    // إنشاء عنصر <li> جديد
    let li = document.createElement("li");
    li.textContent = lectureName;
    
    // إضافة العنصر الجديد إلى قائمة المحاضرات
    document.getElementById("lectureList").appendChild(li);
    
    // مسح الحقل بعد إضافة المحاضرة
    document.getElementById("lectureName").value = "";
}
