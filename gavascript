function uploadFile() {
    const fileInput = document.getElementById('fileUpload');
    const file = fileInput.files[0];
    
    if (file) {
        const lectureList = document.getElementById('lectureList');
        
        // إنشاء عنصر قائمة جديد لإظهار الملف
        const listItem = document.createElement('li');
        listItem.textContent = المحاضرة: ${file.name};

        // إضافة رابط لتحميل الملف (افتراضيًا لا يوجد خادم، فقط محليًا)
        const downloadLink = document.createElement('a');
        downloadLink.href = URL.createObjectURL(file);
        downloadLink.textContent = "تحميل";
        downloadLink.target = "_blank";
        listItem.appendChild(downloadLink);
        
        // إضافة المحاضرة إلى القائمة
        lectureList.appendChild(listItem);

        // إفراغ الحقل بعد رفع الملف
        fileInput.value = '';
    } else {
        alert("الرجاء اختيار ملف");
    }
}
